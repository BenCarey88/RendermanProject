shader flowerPotShader
(
    color cin = 1,
    output color cout = 0,
    output color specOut = color(0,1,0)
)

{
    float repeatCount = 6;
    float s = P[0] * repeatCount;
    float t = P[1] * repeatCount;
    vector noiseLayer = 0.5 + noise("perlin",s,t)*0.5;
    cout = (color)noiseLayer*cin;
}